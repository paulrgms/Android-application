<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bruno"
    tools:context="com.example.travel.MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"
            android:layout_marginTop="5dp"
            android:textColorHint="#FF00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:inputType="number"
            android:layout_marginTop="2dp"
            android:textColorHint="#FF00"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edtxt1"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff00"
            android:text="From" />

        <Spinner
            android:id="@+id/spin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"


            android:spinnerMode="dropdown">

        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edtxt2"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff00"
            android:text="To" />

        <Spinner
            android:id="@+id/spin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"


            android:spinnerMode="dropdown">

        </Spinner>



    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btncal"
        android:text="Show Calendar"
        android:textColor="#4CAF50"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edtxt3"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff00"
            android:text="Date" />


        <Spinner
            android:id="@+id/spin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"


            android:spinnerMode="dropdown">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView


            android:id="@+id/edtxt4"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff00"
            android:text="Time" />

        <Spinner
            android:id="@+id/spin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"


            android:spinnerMode="dropdown">

        </Spinner>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edtxt5"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff00"
            android:text="Seat" />

        <Spinner
            android:id="@+id/spin5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"


            android:spinnerMode="dropdown">

        </Spinner>




    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Save"
        android:id="@+id/btn"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Maps"
        android:id="@+id/btnmap"
        android:onClick="onProcess"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:id="@+id/btnp"
        />

    <Button
        android:id="@+id/btndl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"


        />

    <!--<ImageView-->
        <!--android:layout_width="53dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="25dp"-->
        <!--android:src="@drawable/bruno2" />-->


</LinearLayout>